<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.github.kiolk.allmed.presentation.screen.splash.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_trackerFragment"
            app:destination="@id/tracker_fragment" />
    </fragment>
    <fragment
        android:id="@+id/tracker_fragment"
        android:name="com.github.kiolk.allmed.presentation.screen.tracker.TrackerFragment"
        android:label="fragment_tracker"
        tools:layout="@layout/fragment_tracker" >
        <action
            android:id="@+id/action_tracker_fragment_to_addDragFragment"
            app:destination="@id/addDragFragment" />
    </fragment>

    <fragment
        android:id="@+id/doctor_fragment"
        android:name="com.github.kiolk.allmed.presentation.screen.doctor.DoctorFragment"
        android:label="fragment_doctor"
        tools:layout="@layout/fragment_doctor" />

    <fragment
        android:id="@+id/chat_fragment"
        android:name="com.github.kiolk.allmed.presentation.screen.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/setting_fragment"
        android:name="com.github.kiolk.allmed.presentation.screen.settings.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/addDragFragment"
        android:name="com.github.kiolk.allmed.presentation.screen.adddrag.AddDragFragment"
        android:label="fragment_add_drag"
        tools:layout="@layout/fragment_add_drag" />
</navigation>